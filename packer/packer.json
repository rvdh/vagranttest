{
  "variables": {
    "atlas_username": "rvdh",
    "atlas_name": "test-dev"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/vanilla-debian-8-jessie-preseed.cfg ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=us ",
        "interface=eth0 ",
        "netcfg/get_hostname=dev01 ",
        "netcfg/get_domain=test.nl ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=us ",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "disk_size": "10140",
      "guest_os_type": "Debian_64",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "a9b490b4215d1e72e876b031dafa7184",
      "iso_checksum_type": "md5",
      "iso_url": "http://cdimage.debian.org/cdimage/release/8.3.0/amd64/iso-cd/debian-8.3.0-amd64-netinst.iso",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": "22",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vm_name": "dev01.test.nl",
      "vboxmanage": [
        ["hostonlyif", "create"],
        ["hostonlyif", "create"],
        ["hostonlyif", "ipconfig", "vboxnet0","--ip", "192.168.10.250", "--netmask", "255.255.255.0"],
        ["hostonlyif", "ipconfig", "vboxnet1","--ip", "192.168.15.250", "--netmask", "255.255.255.0"],
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"],
        ["modifyvm", "{{.Name}}", "--nic1", "nat"],
        ["modifyvm", "{{.Name}}", "--nic2", "hostonly"],
        ["modifyvm", "{{.Name}}", "--nic3", "hostonly"],
        ["modifyvm", "{{.Name}}", "--hostonlyadapter2", "vboxnet0"],
        ["modifyvm", "{{.Name}}", "--hostonlyadapter3", "vboxnet1"]
      ]
    }
  ],
  "post-processors": [
    [
    {
      "type": "atlas",
      "only": ["virtualbox-iso"],
      "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "virtualbox",
        "version": "1.0.0"
      }
    }]
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "5s",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "packer/scripts/base.sh",
            "packer/scripts/vagrant.sh",
            "packer/scripts/ansible.sh",
            "packer/scripts/virtualbox.sh",
            "packer/scripts/cleanup.sh",
            "packer/scripts/minimize.sh"
          ]
        }
      }
    }
  ]
}
